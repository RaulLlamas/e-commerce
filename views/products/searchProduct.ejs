<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
   <main>
       <div class="container mb-5 mt-5">
            <div class="row">
                <% for( let i = 0; i < producto.length; i++ ) { %>
                <div class="col-md-4">
                    <div class="card mt-3">
                        <div class="product-1 align-items center p-2 text-cener food-card">
                            <img src="/img/products/<%= producto[i].Image %>" class="rounded" width="200" alt="">

                            <div class="mt-3 info">
                                <span class="text1 d-block"><%= producto[i].name %></span>
                            </div>
                            <div class="cost mt-3 text-dark">
                                <span class="food-card-price">
                                    $<%= producto[i].price %></span>
                            </div>
                        </div>
                        <div class="p-3 food text-center text-white mt-3 cursor">
                            <a href="/products/productDetail/<%= producto[i].Id_products %>" class="food-card-button " class="text-uppercase">Detalle</a>
                            
                        </div> 
                    </div>
                </div> 
                <% } %>
            </div>
        </div> 
       
   </main>
   <footer>
    <%- include('../partials/footer') %>
   </footer>
</body>
</html> 